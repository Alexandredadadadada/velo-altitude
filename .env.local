# Variables d'environnement pour le déploiement Velo-Altitude
# Note: Ces valeurs sont remplacées par les véritables secrets dans l'interface Netlify

# Connexion MongoDB
MONGODB_URI=mongodb+srv://placeholder:placeholder@placeholder.mongodb.net/velo-altitude?retryWrites=true&w=majority

# Authentification
AUTH0_DOMAIN=velo-altitude.auth0.com
AUTH0_CLIENT_ID=placeholder
AUTH0_AUDIENCE=https://api.velo-altitude.com
JWT_SECRET=placeholder_secret_key
JWT_ROTATION_SECRET=placeholder_rotation_key

# APIs externes
MAPBOX_API_KEY=placeholder
REACT_APP_OPENROUTE_API_KEY=placeholder
REACT_APP_OPENWEATHER_API_KEY=placeholder

# Cache Redis (peut être vide pour l'environnement de développement local)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Désactiver Redis pour faciliter le déploiement initial
DISABLE_REDIS=true

# Variables pour les modules spécifiques
# Module FTP et calcul des zones d'entraînement
ENABLE_FTP_CALCULATOR=true
DEFAULT_FTP_METHOD=twenty_minute

# Module HIIT avec validation des paramètres
ENABLE_HIIT_VALIDATION=true
MAX_INTERVAL_INTENSITY=200

# Variables pour l'environnement build
NODE_ENV=production

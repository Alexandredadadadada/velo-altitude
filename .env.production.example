# Variables d'environnement pour le déploiement production de Velo-Altitude
# À configurer dans le dashboard Netlify (ne pas committer ce fichier avec les vraies valeurs)

# Configuration de l'application
REACT_APP_ENV=production
REACT_APP_API_URL=https://velo-altitude.netlify.app/api
REACT_APP_BASE_URL=https://velo-altitude.netlify.app

# Configuration MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/velo-altitude?retryWrites=true&w=majority
MONGODB_DBNAME=velo-altitude
MONGODB_USER=username
MONGODB_PASSWORD=password

# Authentification Auth0
REACT_APP_AUTH0_DOMAIN=velo-altitude.eu.auth0.com
REACT_APP_AUTH0_CLIENT_ID=yourClientId
REACT_APP_AUTH0_AUDIENCE=https://api.velo-altitude.app

# API Keys pour les services externes
REACT_APP_MAPBOX_TOKEN=pk.eyJxxxMapboxTokenxxx
REACT_APP_OPENWEATHER_API_KEY=yourOpenWeatherKey
REACT_APP_STRAVA_CLIENT_ID=yourStravaClientId
REACT_APP_STRAVA_CLIENT_SECRET=yourStravaClientSecret

# Configuration des services
CACHE_DURATION=3600
ENABLE_API_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

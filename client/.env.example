# Velo-Altitude - Variables d'environnement requises
# Copier ce fichier en .env.local pour le développement local
# Ces variables doivent être configurées dans le panneau d'administration Netlify pour la production

# API Mapbox pour les cartes et visualisations
REACT_APP_MAPBOX_TOKEN=votre_token_mapbox_ici

# API Strava pour la synchronisation des activités
REACT_APP_STRAVA_CLIENT_ID=votre_client_id_strava
REACT_APP_STRAVA_CLIENT_SECRET=votre_client_secret_strava
REACT_APP_STRAVA_REDIRECT_URI=https://velo-altitude.com/auth/strava/callback

# API OpenWeather pour les prévisions météo
REACT_APP_OPENWEATHER_API_KEY=votre_api_key_openweather

# API OpenAI pour les recommandations personnalisées
REACT_APP_OPENAI_API_KEY=votre_api_key_openai

# URL de l'API backend
REACT_APP_API_URL=https://api.velo-altitude.com

# Configuration des fonctionnalités
REACT_APP_ENABLE_3D_VISUALIZATION=true
REACT_APP_ENABLE_SOCIAL_FEATURES=true
REACT_APP_ENABLE_PREMIUM_FEATURES=true

# Configuration analytique
REACT_APP_GOOGLE_ANALYTICS_ID=votre_ga_id

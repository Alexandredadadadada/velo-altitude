# Velo-Altitude - Configuration API
# Remplacer les valeurs par vos propres clés API

# Mapbox API (Cartographie)
MAPBOX_PUBLIC_TOKEN=your_mapbox_public_token_here
MAPBOX_SECRET_TOKEN=your_mapbox_secret_token_here

# OpenWeatherMap API (Météo)
OPENWEATHER_API_KEY=your_openweather_key_here

# OpenRouteService API (Calcul d'itinéraires)
OPENROUTE_API_KEY=your_openroute_key_here

# Strava API (Activités cyclistes)
STRAVA_CLIENT_ID=your_strava_client_id_here
STRAVA_CLIENT_SECRET=your_strava_client_secret_here
STRAVA_ACCESS_TOKEN=your_strava_access_token_here
STRAVA_REFRESH_TOKEN=your_strava_refresh_token_here
STRAVA_REDIRECT_URI=https://velo-altitude.com/auth/strava/callback

# OpenAI API (Assistant IA)
OPENAI_API_KEY=your_openai_key_here

# Claude API (Assistant IA alternatif)
CLAUDE_API_KEY=your_claude_api_key_here

# Variables du serveur
PORT=3000
NODE_ENV=production

# URL de base de l'API (pour le déploiement)
# Utiliser l'API existante jusqu'à ce que api.velo-altitude.com soit configuré
# API_BASE_URL=https://api.grand-est-cyclisme.com
API_BASE_URL=https://api.velo-altitude.com
CLIENT_BASE_URL=https://velo-altitude.com

# Configuration de la base de données MongoDB
MONGODB_URI=mongodb://username:password@hostname:port/database
MONGODB_DB_NAME=grand_est_cyclisme

# Redis (pour le cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=ChangeThisToAStrongPassword
REDIS_DB=0

# Redis Cluster pour l'échelle européenne
REDIS_CLUSTER=false
# Format: [{"host":"redis-node1.example.com","port":6379},{"host":"redis-node2.example.com","port":6379},{"host":"redis-node3.example.com","port":6379}]
REDIS_NODES=[]
REDIS_MAX_RETRIES=3
REDIS_CONNECT_TIMEOUT=10000
REDIS_KEY_PREFIX=europe-cyclisme:

# Sécurité des clés API
API_KEYS_ENCRYPTION_KEY=generate_a_32_byte_hex_key_here
KEYS_DIRECTORY=./.keys

# Sécurité JWT
JWT_SECRET=change_this_to_a_secure_random_string
SESSION_SECRET=another_secure_random_string

# Configuration des emails
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notifications@dashboard-velo.com
SMTP_PASSWORD=your_smtp_password_here
EMAIL_FROM=Dashboard Velo <notifications@dashboard-velo.com>

# Paramètres de sécurité
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
CORS_ORIGIN=https://dashboard-velo.com

# Clé de chiffrement pour les sessions et tokens
CACHE_TTL=600
CACHE_CHECK_PERIOD=120

# Configuration des logs
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/grand-est-cyclisme

# Configuration d'upload de fichiers
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/tmp/grand-est-cyclisme-uploads
